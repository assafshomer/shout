<div class="row">
  <div class="span6">
    <%= form_tag request.fullpath, class: "form-inline", method: 'get' do %>           
      <table cellpadding="5">
        <tr>
          <td>
            <%= text_field_tag :search,params[:search], 
            id: 'search', class: "input-large search-query" %>          
          </td>
          <td>
            <%= submit_tag "Search",
             id: "mp_search_button", class: "btn btn-primary btn-align" %>          
          </td>
          <td>
            <%= submit_tag "Clear",
             id: "mp_clear_search_button", class: "btn btn-primary btn-align" %>           
          </td>
        </tr>        
      </table>
    <% end %>   
  </div>
</div>